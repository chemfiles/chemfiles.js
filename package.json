{
  "name": "chemfiles",
  "version": "0.9.3",
  "description": "Modern library for chemistry trajectories reading and writing ",
  "main": "src/index.ts",
  "scripts": {
    "test": "ts-doctest . tests && mocha --timeout 8000 && npm run lint",
    "coverage": "rm -rf tests/doc && nyc mocha --timeout 8000 && mv coverage/coverage-final.json coverage/coverage.json",
    "build": "webpack --mode production && npm run merge-dts",
    "build-libchemfiles": "ts-node scripts/build-libchemfiles.ts",
    "merge-dts": "dts-bundle --name chemfiles --main dist/src/index.d.ts --baseDir dist --out chemfiles.d.ts --removeSource",
    "lint": "ts-node scripts/lint.ts && eslint . && prettier --check src",
    "docs": "typedoc && ts-node scripts/add-docs-css.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chemfiles/chemfiles.js.git"
  },
  "author": "Guillaume Fraux <guillaume.fraux@epfl.ch>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/chemfiles/chemfiles.js/issues"
  },
  "homepage": "https://github.com/chemfiles/chemfiles.js#readme",
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "recursive": true,
    "spec": "tests/*.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "text-summary",
      "json"
    ],
    "all": true
  },
  "devDependencies": {
    "@luthaf/typescript-doctest": "^1.2.0",
    "@types/chai": "^4.2.11",
    "@types/copy-webpack-plugin": "^6",
    "@types/glob": "^7.1.3",
    "@types/karma": "^5",
    "@types/mocha": "^8",
    "@types/node": "^14",
    "@types/webpack": "^4.41.21",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^6",
    "dts-bundle": "^0.7.3",
    "eslint": "^7.4.0",
    "glob": "^7.1.6",
    "karma": "^5",
    "karma-chrome-launcher": "^3.1.0",
    "karma-detect-browsers": "^2.3.3",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^2",
    "karma-safari-launcher": "^1.0.0",
    "karma-webpack": "^4.0.2",
    "mocha": "^8",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "source-map-support": "^0.5.19",
    "ts-loader": "^8",
    "ts-node": "^8.10.2",
    "typedoc": "0.17.0-3",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}

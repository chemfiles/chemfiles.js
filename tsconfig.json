{
    "compilerOptions": {
        "strict": true,
        "target": "es5",
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "dist/",
        "downlevelIteration": true,
        "lib": ["es5"]
    },
    "exclude": ["tests/doc/**/*.ts"],
    "typedocOptions": {
        "mode": "library",
        "inputFiles": "src/index.ts",
        "out": "dist/docs/",
        "excludePrivate": true,
        "excludeProtected": true,
        "excludeNotExported": true,
        "hideGenerator": true,
        "includeVersion": true,
        "readme": "none"
    }
}
